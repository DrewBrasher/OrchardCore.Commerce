@model PricePartViewModel

<div class="form-group" asp-validation-class-for="Price">
    <label asp-for="Price">@T["Price"] </label>
    <div class="input-group">
        <input asp-for="PriceValue" class="form-control text-muted" />
        <div class="input-group-append">
            <select asp-for="PriceCurrency"
                    asp-items="@(new SelectList(Model.Currencies, "CurrencyIsoCode", "CurrencyIsoCode"))"></select>
        </div>
    </div>
    <span asp-validation-for="PriceValue"></span>
    <span class="hint">
        @T["The base price of the product."]
    </span>
</div>

<div class="row">
    @foreach (var variantKey in Model.VariantsPrices.Keys)
    {
        <div class="col-md-3">
            <div class="form-group" asp-validation-class-for="VariantsPrices[variantKey]">
                <label asp-for="VariantsPrices[variantKey]">@variantKey @T["Price"] </label>
                <div class="input-group">
                    <input asp-for="VariantsPrices[variantKey]" class="form-control text-muted" />
                </div>
                <span asp-validation-for="VariantsPrices[variantKey]"></span>
            </div>
        </div>
    }
</div>